# ==================== DATABASE ====================
# PostgreSQL connection string for production
DATABASE_URL="postgresql://username:password@localhost:5432/otohub?schema=public"

# ==================== AUTHENTICATION ====================
JWT_SECRET="your-secure-jwt-secret-minimum-32-characters-long"

# ==================== SMTP EMAIL (for OTP) ====================
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# For Gmail: Use App Password, not regular password
# Go to: Google Account > Security > 2-Step Verification > App passwords

# ==================== CORS ====================
# Comma-separated list of allowed origins
CORS_ORIGINS="https://oto.modula.click,http://localhost:3000"

# ==================== APPLICATION ====================
PORT=4000
NODE_ENV="production"
